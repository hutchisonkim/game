{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Spark: Start Runner",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/spark-runner-start.ps1"
      ],
      "options": {
        "env": {
          "DOTNETBACKEND_PORT": "5000",
          "DOTNET_WORKER_SPARK_VERSION": "3.5.3",
          "PYTHON_WORKER_FACTORY_PORT": "5001",
          "HADOOP_HOME": "C:\\hadoop\\cdarlint\\winutils\\hadoop-3.3.6"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
        {
          "label": "Spark: Tail Runner Logs",
          "type": "shell",
          "command": "pwsh.exe",
          "args": [
            "-NoProfile",
            "-ExecutionPolicy",
            "Bypass",
            "-Command",
            "$pub = Join-Path \"${workspaceFolder}\" 'tests/Game.Chess.Tests.Integration.Runner/bin/Release/net8.0/win-x64/publish'; $log = Join-Path $pub 'spark-runner-output.log'; if (Test-Path $log) { Get-Content -Path $log -Wait } else { Write-Host \"Log not found: $log\" }"
          ],
          "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
          },
          "problemMatcher": []
        }
    {
      "label": "Spark: Start (if needed) + Test (Fast)",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/spark-start-and-test-fast.ps1"
      ],
      "options": {
        "env": {
          "DOTNETBACKEND_PORT": "5000",
          "DOTNET_WORKER_SPARK_VERSION": "3.5.3",
          "PYTHON_WORKER_FACTORY_PORT": "5001",
          "HADOOP_HOME": "C:\\hadoop\\cdarlint\\winutils\\hadoop-3.3.6"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Spark: Stop Runner",
      "type": "shell",
      "command": "pwsh.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/spark-testctl.ps1",
        "-Stop"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
